<?xml version="1.0" encoding="utf-8"?>
<resources>


    <style name="PermissionDialogTheme" parent="ThemeOverlay.AppCompat.Dialog.Alert">
        <item name="alertDialogStyle">@style/PermissionAlertDialogStyle</item>
        <item name="dialogCornerRadius">16dp</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonDialog</item>
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonDialog</item>
    </style>
    <style name="PermissionDialogTheme.Bottom">
        <item name="android:windowAnimationStyle">@style/Animation.Permission.BottomSheetDialog</item>
    </style>

    <style name="Animation.Permission.BottomSheetDialog" parent="Animation.AppCompat.Dialog">
        <item name="android:windowEnterAnimation">@anim/permissionx_bottom_sheet_slide_in</item>
        <item name="android:windowExitAnimation">@anim/permissionx_bottom_sheet_slide_out</item>
    </style>

    <style name="PositiveButtonDialog">
        <item name="backgroundTint">?attr/colorPrimary</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:insetBottom">4dp</item>
        <item name="android:insetTop">4dp</item>
    </style>

    <style name="NegativeButtonDialog">
        <item name="backgroundTint">?attr/colorButtonNormal</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:insetBottom">4dp</item>
        <item name="android:insetTop">4dp</item>
    </style>


    <style name="PermissionAlertDialogStyle" parent="Base.AlertDialog.AppCompat">
        <item name="android:layout">@layout/permissionx_alert_dialog</item>
    </style>

</resources>